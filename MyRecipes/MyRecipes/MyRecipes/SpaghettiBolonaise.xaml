<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyRecipes.SpaghettiBolonaise">
    <ContentView Padding="20" BackgroundColor="Beige">
        <StackLayout>
            <Editor Text="Spaghetti Bolognaise" TextChanged="NameTextChanged" AutoSize="TextChanges" TextColor="black" FontAttributes="Bold" FontSize="20"/>
            <Editor Text="Steve" TextChanged="SrcTextChanged" AutoSize="TextChanges" TextColor="black" FontSize="18"/>
            <Label Text="Ingredients"/>
            <Editor TextColor="black" FontSize="18" TextChanged="IngTextChanged" AutoSize="TextChanges" Text="Spaghetti &#10; 500g mince &#10; Tomatoes"/>
            <Label Text="Steps"/>
            <Editor TextColor="black" FontSize="18" TextChanged="StepsTextChanged" AutoSize="TextChanges" Text="1. Boil water &#10; 2. Add salt &#10; 3. Add spaghetti"/>
            <StackLayout Orientation="Horizontal">
                <StackLayout>
                    <Button Padding="70,0" BackgroundColor="LightGray" Text="Save"/>
                </StackLayout>
                <StackLayout>
                    <Button Padding="70,0" BackgroundColor="LightGray" Text="Delete" Clicked="OnDelete"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentView>
</ContentPage>